# list with int as elemen data type
list_1 = [2, 4, 8, 16]

# list with string as elemen data type
list_2 = ["Ayrton", "Hamilton", "Verstappen", "Vettel"]

# list with varios data type in the elemen
list_3 = [24, False, "Hello Pyton"]

print(list_1)
print(list_1[2])


print(list_2[3])

hari = ["senin", "selasa", "rabu", "kamis", "Jumat", "Sabtu", "Minggu"]

print(hari[2])
print("Hari ini hari", hari[5])

nama = "Uqi"
umur = 13
laki = True
nama_lengkap = "Syauqi Jannatan a."
agama = "islam"

profil = [nama, umur, laki, nama_lengkap]
print(profil)

profil.append(agama)
print(profil)

buah = ["mangga", "pisang", "jeruk", "anggur"]
buah[2] = "manggis"
print(buah)
print(len(buah))#untuk mengetahui jumlah object di list

buah.append("apel")#untuk menambahkan objek nama di list
print(buah)

buah.remove("pisang")#untuk menghapus nama/object di list
print(buah)
